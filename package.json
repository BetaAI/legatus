{
  "name": "legatus",
  "description": "PubSub with hierarchical subscriptions",
  "version": "0.0.0-semantic-release",
  "main": "dist/es6/lib-root.js",
  "directories": {
    "lib": "src/lib",
    "test": "test",
    "packages": "jspm_packages"
  },
  "scripts": {
    "prebuild": "shx rm -rf dist/*",
    "build:sfx": "jspm bundle-sfx src/lib-root.js dist/legatus.sfx.js --minify",
    "build:bundle": "jspm bundle src/lib-root.js dist/legatus.bundle.js --minify",
    "build:lib": "shx cp -r src dist/es6",
    "build": "npm run build:sfx & npm run build:bundle & npm run build:lib ",
    "test": "mocha --compilers js:babel-core/register",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BetaAI/legatus.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "pubsub"
  ],
  "author": "Dmitri Danilov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BetaAI/legatus/issues"
  },
  "homepage": "https://github.com/BetaAI/legatus#readme",
  "devDependencies": {
    "babel-core": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "jspm": "^0.16.34",
    "mocha": "^2.4.5",
    "semantic-release": "^4.3.5",
    "shx": "^0.1.2",
    "sinon": "^1.17.4"
  },
  "dependencies": {},
  "jspm": {
    "directories": {
      "test": "test"
    },
    "dependencies": {},
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
